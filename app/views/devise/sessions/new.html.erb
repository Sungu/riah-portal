<body style="background-color: #BFE8D8" class="login_main">
  <div class="container-fluid">
    <div class="form"style="margin-top:50px">
      <ul class="tab-group">
        <li class="tab active"><a href="">Log In</a></li>
        <li class="tab"><a href="/users/sign_up" type="post">Sign Up</a></li>
      </ul>
      <div id="signup">   
        <h1 style="margin:5,0,5,0" >Sign Up for play RIAH</h1>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :email, required: false, autofocus: true %>
          </div>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :password, required: false %>
          </div>
          <div class="button button-block">
            <%= f.button :submit, "Log in" %>
          </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</body>



