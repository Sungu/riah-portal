<body style="background-color: #BFE8D8" class="login_main">
  <div class="container-fluid">
    <div class="form"style="margin-top: 50px">
      <ul class="tab-group">
        <li class="tab"><a href="/users/sign_in" type="post">Log In</a></li>
        <li class="tab active"><a href="">Sign Up</a></li>
      </ul>
      <div id="signup">   
        <h1 style="margin:5,0,5,0" >Sign Up for play RIAH</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :name, required: true, autofocus: true %>
          </div>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :email, required: true, autofocus: true %>
          </div>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :password_confirmation, required: true %>
          </div>
          <p class="forgot"><a href="/users/password/new">Forgot Password</a></p>
          <div class="button button-block">
            <%= f.button :submit, "Sign up" %>
          </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
   