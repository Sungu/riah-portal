<body style="background-color: #BFE8D8" class="login_main">
  <div class="container-fluid">
    <div class="form"style="margin-top: 50px">
      <ul class="tab-group">
        <li class="tab"><a href="/users/sign_in" type="post">Log In</a></li>
        <li class="tab active"><a href="">Sign Up</a></li>
      </ul>
      <div id="signup">   
        <h1 style="margin:5,0,5,0" >Sign Up for play RIAH</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :name, required: false, autofocus: true %>
          </div>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :email, required: false, autofocus: true %>
          </div>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :password, required: false  %>
          </div>
          <div class="field-wrap">
            <label>
            </label>
            <%= f.input :password_confirmation, required: false %>
            <p class="forgot">8 character minimum <a href="/users/password/new">Forgot Password</a></p>
          </div>
          
          <div class="button button-block">
            <input type="submit" name="commit" value="Sign Up" style="border:0px">
          </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
   