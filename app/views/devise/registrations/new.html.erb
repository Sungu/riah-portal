<!-- 새로 추가한 회원가입 폼 -->

<div class="form">
  <ul class="tab-group">
    <li class="tab"><a href="/users/sign_in">Log In</a></li>
    <li class="tab active"><a href="/users/sign_up">Sign Up</a></li>
  </ul>
  <div id="signup">   
    <h1>Sign Up for play RIAH</h1>
    <form action="/users/sign_in" method="post">
      <div class="top-row">
        <div class="field-wrap">
          <label>
            Name<span class="req">*</span>
          </label>
          <input type="text" name="user[email]" required autocomplete="off" />
        </div>
      </div>
      <div class="field-wrap">
        <label>
          Email Address<span class="req">*</span>
        </label>
        <input type="email" name="user[email]" required autocomplete="off"/>
      </div>
      <div class="field-wrap">
        <label>
          Set A Password<span class="req">*</span>
        </label>
        <input type="password" name="user[password]" required autocomplete="off"/>
      </div>
      <button type="submit" name="commit" class="button button-block"/>Get Started</button>
    </form>
  </div>
</div> <!-- /form -->

<%= render "devise/shared/links" %>