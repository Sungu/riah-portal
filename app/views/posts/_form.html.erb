<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, input_html: { rows: 10 } %>
    <%= f.input :gako, input_html: { rows: 3 }%>
    <%= f.input :dday, collection: 1..14, prompt: "모집 기한을 정해주세요!", selected: 3 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
