<%= render 'basic' %>

<div class="container hello">

<h2>Post Preview</h2>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Name:</strong>
  <%= User.find(@post.user_id).name %>
</p>

<p>
  <strong>각오:</strong>
  <%= @post.gako %>
</p>

<p>
  <strong>모집기한:</strong>
  <%= @post.created_at+(@post.dday*86400) %>
</p>

<p>
  <strong>지원현황:</strong>
  <%= render "applicants/applicants" %>
  
</p>

<%= link_to '지원하기','#', class: 'btn btn-default' %>

<hr>

<%= render "comments/comments" %>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-default' %>
<%= link_to 'Back', posts_path, class: 'btn btn-default' %>

</div>