<li id="comment_<%=comment.id %>">
  <%= comment.body %>,
  <%= time_ago_in_words(comment.created_at) %> ago
  <% if current_user.id == comment.user_id %>
    <%= link_to '', [comment.post, comment], method: :delete, remote: true, data: { confirm: "Are you sure?" } ,class: 'glyphicon glyphicon-remove' %>
  <% end %>
</li>