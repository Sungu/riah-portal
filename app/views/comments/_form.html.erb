<% comment = @post.comments.new %>
<div id="comments_form_<%=@post.id%>">
<%= simple_form_for([@post, comment], remote: true ) do | f | %>
  <div class='form-inputs'>
    <%= f.input :body, label: false, placeholder: 'Add a comment.',  input_html: { rows: 2 } %>
  </div>
  <div class='form-actions' style="margin-bottom:60px">
    <%= f.button :submit %>
  </div>
<% end %>
</div>



